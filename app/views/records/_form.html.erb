<%= form_with(model: @record, local: true, url: choose_new_or_edit) do |form| %>
  <% if @record.errors.any? %>
    <div class="container">
      <dl>
        <h2 class="error"><%= @record.errors.count %>件のエラーがあります。</h2>
        <h2 class="error">
          <% @record.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </h2>
      </dl>
    </div>
  <% end %>
  <div class="record_tweet">
    <label class="record_content_tabel">本文:</label>
    <%= form.text_field :content, :size=>"60" %>
  </div>
  <button type="button" class="btn-primary btn-lg">
    <%= form.submit(["記録する"]) %>
  </button>
<% end %>

<button type="button" class="btn-primary btn-lg" id="back_to_index">
  <%= link_to '記録一覧画面にもどる', records_path %>
</button>